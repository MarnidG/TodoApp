@model IEnumerable<TodoApp.Models.ToDo>

@{
    ViewData["Title"] = "Zadania";
}

<h1>Lista zadan</h1>

<p>
    <a asp-action="Create">Utworz</a>
</p>
<div class="row">
	<div class="col-md-2">
		<form asp-action="Index" method="get">
			<div class="mb-3 form-action">
				<label class="form-label">Kategorie:</label>
                <select name="CategoryId" class="form-select"
                        asp-items="ViewBag.Categories">
				</select>
			</div>
			
            <div class="mb-3 form-action">
                <label class="form-label">Status:</label>
                <select name="StatusId" class="form-select"
                        asp-items="ViewBag.Statuses">
                </select>
            </div>
            <input type="submit" value="Filtruj" class="btn btn-primary"/>
			<a asp-action="Index" asp-route-CategoryId="1" asp-route-StatusId="1" class="btn btn-primary">Wyczysc</a>
		</form>
	</div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Opis)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Usun</a>
                </td>   
            </tr>
    }
        </tbody>
    </table>
</div>